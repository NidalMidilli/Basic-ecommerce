@model CartListViewModel

<main id="main">
<section id="hero" class="clearfix">
<div class="container">
    <div class="row pt-5">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-info" role="alert">@TempData["message"]</div>
        }
        @if (Model.Cart.CartLines.Count > 0 && Model.Cart.CartLines.Count != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>PICTURE</th>
                         <th class ="fw-bold" scope="col">Product Name</th>
                       <th class="fw-bold"  scope="col">Unit Price</th>
                       <th class="fw-bold" scope="col">Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cart.CartLines)
                    {
                        <tr>                           
                             <td><img  src="https://images1.the-dots.com/4462989/120721-thedots-icon.png?p=squareContained" width="100" height="100" /></td>
                            <td class="fw-bold">@item.Product.productName</td>
                            <td class="fw-bold">@item.Product.Price</td>                           
                            <td class="fw-bold">@item.Quantity</td>
                            <td class="fw-bold"><a class="btn btn-xs btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.productId">Sil</a></td>
                        </tr>
                    }
                    <tr>     
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><h3>Total</h3></td>
                        <td>
                            <h3>@Model.Cart.Total</h3>
                        </td>
                    </tr>

                    <tr>     
                        <td></td>
                        <td></td>
                        <td></td>

                        <td>

                            <a asp-controller="Product" asp-action="Index" class="btn btn-xs btn-primary">
                                <span>Alışverişe Devam Et</span>
                            </a>
                        </td>

                        <td>
                            <a asp-controller="Cart" asp-action="Complete" class="btn btn-xs btn-success">
                                <span>Ödemeye Git</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <div class="col-lg-12">
                <div class="alert alert-warning  text-center " role="alert">
                    Ürün Bulunamadı!
                </div>
            </div>
        }
    </div>
</div>
</section></main>